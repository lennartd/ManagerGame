<Window x:Class="LoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Spiel laden" Height="298.5" Width="547.5" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="201*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <ListBox Name="lstbxSavedItems" ItemsSource="{Binding}" FontSize="14" Margin="10"></ListBox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnLoad" Click="btnLoad_Click" Grid.Column="1" FontSize="16" Margin="30,15,30,15">Öffnen</Button>
        </Grid>
    </Grid>
</Window>
